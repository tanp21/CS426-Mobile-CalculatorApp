<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calculator_display_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="end"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:text="0"
        android:textColor="@android:color/white" android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="@+id/gridLayout" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/button13"
            style="@style/CircularButton.LightGray"
            android:text="⌫" />

        <Button
            android:id="@+id/button14"
            style="@style/CircularButton.LightGray"
            android:text="±" />

        <Button
            android:id="@+id/button15"
            style="@style/CircularButton.LightGray"
            android:text="%" />

        <Button
            android:id="@+id/button16"
            style="@style/CircularButton.Orange"
            android:text="÷" />

        <Button
            android:id="@+id/button17"
            style="@style/CircularButton.DarkGray"
            android:text="7" />

        <Button
            android:id="@+id/button18"
            style="@style/CircularButton.DarkGray"
            android:text="8" />

        <Button
            android:id="@+id/button19"
            style="@style/CircularButton.DarkGray"
            android:text="9" />

        <Button
            android:id="@+id/button20"
            style="@style/CircularButton.Orange"
            android:text="×" />

        <Button
            android:id="@+id/button21"
            style="@style/CircularButton.DarkGray"
            android:text="4" />

        <Button
            android:id="@+id/button22"
            style="@style/CircularButton.DarkGray"
            android:text="5" />

        <Button
            android:id="@+id/button23"
            style="@style/CircularButton.DarkGray"
            android:text="6" />

        <Button
            android:id="@+id/button24"
            style="@style/CircularButton.Orange"
            android:text="−" />

        <Button
            android:id="@+id/button25"
            style="@style/CircularButton.DarkGray"
            android:text="1" />

        <Button
            android:id="@+id/button26"
            style="@style/CircularButton.DarkGray"
            android:text="2" />

        <Button
            android:id="@+id/button27"
            style="@style/CircularButton.DarkGray"
            android:text="3" />

        <Button
            android:id="@+id/button28"
            style="@style/CircularButton.Orange"
            android:text="+" />

        <Button
            android:id="@+id/button29"
            style="@style/CircularButton.DarkGray"
            android:text="Mode" />

        <Button
            android:id="@+id/button30"
            style="@style/CircularButton.DarkGray"
            android:text="0" />

        <Button
            android:id="@+id/button31"
            style="@style/CircularButton.DarkGray"
            android:text="," />

        <Button
            android:id="@+id/button32"
            style="@style/CircularButton.Orange"
            android:text="=" />
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>